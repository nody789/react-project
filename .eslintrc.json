{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true // 添加此项以支持 Node.js 全局变量
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "react/prop-types": ["off"] // 關閉 PropTypes檢查
}  
}